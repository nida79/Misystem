<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners
                        android:radius="4dp"
                        />

                    <gradient
                        android:angle="90"
                        android:centerX="13%"
                        android:centerColor="#fff"
                        android:startColor="#fff"
                        android:endColor="#fff"
                        android:type="linear"
                        />

                    <stroke
                        android:width="1dp"
                        android:color="@color/main_color"
                        />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/dropdown_blue"/>

            </item>

        </layer-list>
    </item>
</selector>